<div class="left"><%=render :partial => "pages/left"%></div>
<div class="center">
  <div><%=render :partial => "pages/pankuzu"%></div>
  <div>
  <%if @page == nil%>
    <%=button_to "新規作成",{:action => "new"},:class=>"btn btn-primary" %>
  <%else%>
    <h2><%=@page.title%></h2>
    <p>last edited by <%=User.find(@page.last_edit_user_id).name%></p>
    <!--<input type="button" class="btn btn-default" onClick="location.href='<%=@path+"edit"%>'" value="編集">-->
    <%#button_to "削除",{:method=>"delete"},{:class=>"btn btn-default"} %>
    <div>
    <div style= "float:left;">
    <%=button_to "編集",{:action => "edit"},:class=>"btn btn-default" %>
    </div><div style= "float:right;">
    <%=button_to "削除",{:action => "destroy"},:class=>"btn btn-danger",:method=>:delete  %>
    </div>
    </div>
  <%end%>
  </div><br><br>
  <div>
  <%#=image_tag url_for(:action => 'puts_image')%>
  <%if false%>
    <%@page.uploadfiles.each do |f|%>
      <img src="/setting/files<%=@path+'/'+f.file_name%>">
    <%end%>
    <%#if @page.files.attached?%>
      <%#@page.files.each do|file|%>
        <%#=image_tag file%>
      <%#end%>
    <%#end%>
  <%end%>
  <div><%=raw @content%></div>
  <div>
    <%if @page!=nil%>
      <%@page.comments.each do |comment|%>
        <p>ユーザー名 <%=comment.user.name%></p>
        <%=comment.comment%>
        <%=button_to("削除",{:action =>"destroy",:comment_id=>comment.id},:method=>:delete)%>
      <%end%>
      <%=form_tag do%>
        <%=text_area_tag "comment","コメント",placeholder:"コメント"%>
        <%=submit_tag '投稿'%>
      <%end%>
      
      <p><%if @editable%>
        <%=form_tag('',method: "post",multipart: true) do%>
          <%=file_field_tag :files,{:multiple => true}%>
          <%=submit_tag 'アップロード'%>
        <%end%>
      <%end%></p>
      <p>添付ファイル<br>
        <%@page.uploadfiles.each do |file|%>
          <%filepath=file.file_name%>
          <%=link_to file.file_name,filepath%>
        <%end%>
      </p>
      <p>変更履歴</p>
      <%@page.updatehistorys.limit(100).each do |hist|%>
        <p>
          <%=hist.update_time.to_s%><br>
          <%=User.find(hist.user_id).name%>
        </p>
      <%end%>
    <%end%>
  </div>
  </div>
</div>
<div class="right"><%=render :partial => "pages/right"%></div>
